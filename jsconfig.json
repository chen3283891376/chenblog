{
    "compilerOptions": {
         "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "module": "ESNext",
        "target": "ES2022",
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}